.ketty__header {
  padding: 0;
  margin: 0;
  width: 100%;
  height: 65px;
  background: #e4f5fe;
  position: fixed;
  display: flex;
  justify-content: space-between;
  box-shadow: 0px -2px 19px 3px black;
  z-index: 1000;
}

.ketty__logo {
  margin-top: 7.5px;
  margin-left: 20px;
  width: 50px;
  height: 50px;
  background-image: url("");
  background-repeat: no-repeat;
  background-position: 50% 50%;
  background-color: aqua;
}

.ketty__navigation {
  float: right;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-right: 5%;
}

.ketty__navigationLink {
  padding: 20px;
  font-size: 120%;
  border: none;
  background: none;
  &._show {
    color: red;
  }
  &:hover {
    cursor: pointer;
  }
}